<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AI">

    <TextView
        android:id="@+id/generated"
        android:layout_width="413dp"
        android:layout_height="858dp"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/prompt"
        android:layout_width="166dp"
        android:layout_height="120dp"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:text="Ask Away"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/generated" />

    <ScrollView
        android:layout_width="358dp"
        android:layout_height="337dp"
        app:layout_constraintBottom_toBottomOf="@+id/generated"
        app:layout_constraintEnd_toEndOf="@+id/generated"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/prompt"
        app:layout_constraintVertical_bias="0.305">

        <TextView
            android:id="@+id/aiReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ScrollView>

    <EditText
        android:id="@+id/inputAIText"
        android:layout_width="360dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="text"
        android:text="What's this food?"
        app:layout_constraintBottom_toBottomOf="@+id/generated"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.678" />

    <Button
        android:id="@+id/askInput"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Enter"

        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.773" />

    <Button
        android:id="@+id/about"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="About"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88" />

    <Button
        android:id="@+id/history"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="History"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.882" />

    <Button
        android:id="@+id/recipe"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Recipe"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.991" />

    <Button
        android:id="@+id/button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/round_button"

        app:icon="@android:drawable/ic_menu_revert"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="14dp" />

</androidx.constraintlayout.widget.ConstraintLayout>