<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".item_profile">

    <ImageView
        android:id="@+id/ItemImage"
        android:layout_width="411dp"
        android:layout_height="415dp"
        app:srcCompat="@drawable/cats" />

    <ImageView
        android:id="@+id/pager"
        android:layout_width="413dp"
        android:layout_height="323dp"

        android:layout_marginTop="348dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pager"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/Map"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#FFFFFF"
        android:drawableTint="#8F2727"
        android:elevation="20dp"
        android:text="A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ItemImage" />

    <ScrollView
        android:id="@+id/item_profile_scroll"
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pager">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/baloo_bhaina"
                android:padding="10dp"
                android:text="Pizza cocaine"
                android:textSize="34sp"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/posterer"
                android:layout_width="174dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:padding="10dp"
                android:text="By: Adalene Falcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Title" />

            <TextView
                android:id="@+id/tag_state_description"
                android:layout_width="411dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:text="ood, substance consisting essentially of protein, carbohydrate, fat, and other nutrients used in the body of an organism to sustain growth and vital processes and to furnish energy. The absorption and utilization of food by the body is fundamental to nutrition and is facilitated by digestion. I love how flavorful this soup is with all the fresh herbs and vegetables in it. This is the perfect adjective to describe something that's so delicious and flavorful, it's actually making your mouth water. His mom makes such mouth-watering cakes that I just can't wait to go over to his house tonight."
                android:textColor="#A8A8A8"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/posterer" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/loc"
        android:layout_width="113dp"
        android:layout_height="68dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="16dp"
        android:text="location"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toStartOf="@+id/Map"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>